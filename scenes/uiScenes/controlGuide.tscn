	yield(global,\"photoPlaced\")
	$tween.interpolate_property(self,'rect_global_position:y',self.rect_global_position.y,self.rect_global_position.y-256,0.66,Tween.TRANS_QUINT,Tween.EASE_IN,1.0)
	$tween.start()
	yield($tween,\"tween_all_completed\")
	self.queue_free()
